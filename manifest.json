{
  "manifest_version": 3,
  "name": "YT Playlist Cacher (Dev)",
  "version": "0.0.1",
  "description": "Scrapes playlist tiles you see and stores them locally.",
  "permissions": ["storage", "tabs", "identity", "alarms"],
  "host_permissions": ["https://www.youtube.com/*", "https://www.googleapis.com/*"],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content/index.js"],
      "run_at": "document_idle"
    }
  ],
  "action": { "default_title": "YT Cacher (Dev)", "default_popup": "ui/popup/index.html" },
  "options_page": "ui/options/index.html"
}
