{
  "manifest_version": 3,
  "name": "YT Manager",
  "version": "0.0.1",
  "description": "Advanced local YouTube manager: capture videos/channels as you browse, tag and filter with presets, maintain a channels directory, back up settings/history to Drive, with an upcoming Recommender page.",
  "permissions": ["storage", "tabs", "identity", "alarms"],
  "host_permissions": ["https://www.youtube.com/*", "https://www.googleapis.com/*"],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content/index.js"],
      "run_at": "document_idle"
    }
  ],
  "action": { "default_title": "YT Manager", "default_popup": "ui/popup/index.html" },
  "options_page": "ui/options/index.html"
}
